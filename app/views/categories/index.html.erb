<% content_for :page_heading, "CATEGORIES" %>
<div class="container py-2">
  <div>
    <ul class="list-group">
      <% @categories.each do |cat| %>
        <li class="list-group-item d-flex bg-light justify-content-between align-items-center w-100 mb-3">
          <%= link_to category_purchases_path(cat), class: "link link-underline-info" do %>
            <div class="d-flex justify-content-between align-items-center me-3">
              <div class="ms-2 me-auto d-flex align-items-center">
                <img class="icon-images img-fluid" src="<%= cat.icon %>">
                <div class="fw-bold px-2"><%= cat.name %></div>
              </div>
              <span class="badge bg-info rounded-pill link-underline-success">
                <%= cat.total_amount %>
              </span>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="text-center add-btn my-5">
    <button type="button" class="btn btn-success"><%= link_to "New Category", new_category_path, class: "text-decoration-none text-light"%></button>
  </div>
</div>
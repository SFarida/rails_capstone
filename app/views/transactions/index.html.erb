<div class="container">
  <div class="text-center">
    <h1>Transactions</h1>
  </div>
  <div class="text-start d-flex justify-content-between bg-info text-white my-5">
    <h2>
      <span><%= @category.name %></span>
    </h2>
    <h2>$
      <%= @category.total_amount %>
    </h2>
  </div>
  <div>
    <ul class="list-group">
      <% @transactions.each do |trx| %>
        <li class="list-group-item d-flex flex-column justify-content-between align-items-center w-100">
            <div class="d-flex justify-content-between align-items-center w-100">
              <div class="ms-2 me-auto d-flex align-items-center">
                <img class="icon-images img-fluid" src="<%= @category.icon %>">
                <div class="d-flex flex-column ms-3">
                  <p class="fw-bold px-2">
                    <%= trx.name %>
                  </p>
                  <p>
                    <%= trx.created_at.strftime("%B %d, %Y %H:%M")  %>
                  </p>
                </div>
              </div>
              <span class="badge bg-info rounded-pill">$
                <%= trx.amount %>
              </span>
            </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="text-end my-5">
    <button type="button" class="btn btn-outline-info"><%= link_to "New Transaction", new_category_transaction_path, class: "text-decoration-none text-dark"%></button>
  </div>
</div>